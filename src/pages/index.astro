---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import { URL_BASE } from "@/variables";
import "@/utils/index"
---

<Layout>
  <main
    class="min-h-screen flex flex-col overflow-clip"
    style={`background-image: url('${URL_BASE}/img/bg/banner1.webp'); background-size: cover; background-position: center;`}
  >
    <Header />
    <section class="w-6xl max-w-full mx-auto p-4 md:p-8 flex-1 flex items-center">
      <div class="max-w-3xl">
        <h1 class="text-3xl md:text-5xl text-white font-bold leading-tight mb-8">
          ANÁLISIS FARMACOECONÓMICO DE LA VACUNACIÓN 
          <span class="font-light">
            CONTRA INFLUENZA
          </span>
        </h1>
        
        <!-- Botones -->
        <div class="flex flex-wrap gap-4 mb-8">
          <a href={`${URL_BASE}/calculadora`} class="bg-blue-influvac text-white px-6 py-3 rounded-full font-bold text-xl md:text-3xl hover:bg-opacity-90 transition-all duration-300 flex items-center justify-center">
            INICIO
          </a>
          <a href={`${URL_BASE}/calculadora#/resumen`} class="bg-blue-influvac text-white px-6 py-3 rounded-full font-bold text-xl md:text-3xl hover:bg-opacity-90 transition-all duration-300 flex items-center justify-center">
            RESUMEN
          </a>
          <a href={`${URL_BASE}/supuestos-de-modelacion`} class="bg-blue-influvac text-white px-6 py-3 rounded-full font-bold text-base text-center md:text-2xl leading-none hover:bg-opacity-90 transition-all duration-300">
            SUPUESTOS<br>DE MODELACIÓN
          </a>
        </div>
        
        <!-- Imagen Influvac Tetra -->
        <div class="flex justify-start">
          <img 
            src={`${URL_BASE}/img/influvac_tetra.webp`} 
            alt="Influvac Tetra" 
            class="max-w-2xl w-full h-auto -ml-4 md:-ml-12 xl:-ml-24"
          />
        </div>
      </div>

    </section>
  </main>
</Layout>
