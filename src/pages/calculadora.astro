<script>
  import { URL_BASE } from "@/variables";
  class ViewManager {
    private currentView: string = "view1";
    private formData: any = null;
    private mainContainer: HTMLElement | null = null;
    
    // Variables del formulario
    private formVariables = {
      // Par√°metros B√°sicos
      numEmpleados: 0,
      fecha1Vacunacion: '',
      numeroDeVacunados1: 0,
      fecha2Vacunacion: '',
      numeroDeVacunados2: 0,
      
      // Par√°metros Financieros
      calculoProductividad: '',
      ventaNeta: 0,
      indicadorProductividad: 0,
      salarioPromedio: 0,
      precioVacunacion: 0,
      
      // Par√°metros Operacionales
      nivelExposicion: 1,
      diasIncapacidad: 0
    };

    constructor() {
      this.mainContainer = document.getElementById("main-container");
      this.initializeNavigation();
      this.initializeFormHandler();
      this.initializeCustomEvents();
      // mostrar por consola los valores del formulario
      this.logFormValues();
    }

    private initializeNavigation(): void {
      const navButtons = document.querySelectorAll(".view-nav-btn");
      navButtons.forEach((button) => {
        button.addEventListener("click", (e) => {
          const target = e.target as HTMLButtonElement;
          const viewId = target.getAttribute("data-view");
          const bgImage = target.getAttribute("data-bg");

          if (viewId) {
            this.switchView(viewId, bgImage);
          }
        });
      });
    }

    private initializeFormHandler(): void {
      const form = document.getElementById(
        "modelParametersForm"
      ) as HTMLFormElement;
      if (form) {
        form.addEventListener("submit", (e) => {
          e.preventDefault();
          this.handleFormSubmit(form);
        });
      }
    }

    private initializeCustomEvents(): void {
      // Escuchar eventos personalizados del formulario
      document.addEventListener("switchToView", (e: any) => {
        console.log("Cambiando a la vista:", e.detail.viewId);
        const { viewId } = e.detail;
        let bgImage = "banner2"; // default

        // Determinar el fondo basado en la vista
        switch (viewId) {
          case "view2":
            bgImage = "banner3";
            break;
          case "view3":
            bgImage = "banner4";
            break;
          case "view4":
            bgImage = "banner5";
            break;
        }

        this.switchView(viewId, bgImage);
      });
    }

    private switchView(viewId: string, bgImage?: string | null): void {
      // Hacer scroll suave hacia arriba
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });

      // Cambiar fondo si se especifica
      if (bgImage && this.mainContainer) {
        const urlBase = URL_BASE || "";
        this.mainContainer.style.backgroundImage = `url('${urlBase}/img/bg/${bgImage}.webp')`;
      }

      // Ocultar vista actual
      const currentViewElement = document.getElementById(this.currentView);
      if (currentViewElement) {
        currentViewElement.classList.add("hidden");
        currentViewElement.classList.remove("active");
      }

      // Mostrar nueva vista
      const newViewElement = document.getElementById(viewId);
      if (newViewElement) {
        newViewElement.classList.remove("hidden");
        newViewElement.classList.add("active");
      }

      // Actualizar vista actual
      this.currentView = viewId;

      this.updateLogo(viewId);

      // Cargar contenido espec√≠fico de la vista si es necesario
      this.loadViewContent(viewId);
    }

    private handleFormSubmit(form: HTMLFormElement): void {
      // Recopilar datos del formulario
      this.formData = new FormData(form);
      
      // Extraer y procesar valores del formulario
      this.extractFormValues();
      
      // Mostrar valores en consola
      this.logFormValues();

      // Realizar c√°lculos
      this.calculateResults();

      // No cambiar de vista autom√°ticamente, dejar que el usuario elija
      console.log("Formulario procesado. Datos listos para visualizaci√≥n.");
    }

    private extractFormValues(): void {
      if (!this.formData) return;

      // Funci√≥n auxiliar para limpiar valores num√©ricos (remover puntos separadores)
      const cleanNumericValue = (value: string): number => {
        return parseInt(value.replace(/\./g, '')) || 0;
      };

      // Extraer valores b√°sicos
      this.formVariables.numEmpleados = cleanNumericValue(this.formData.get('numEmpleados') || '0');
      this.formVariables.fecha1Vacunacion = this.formData.get('fecha1Vacunacion') || '';
      this.formVariables.numeroDeVacunados1 = cleanNumericValue(this.formData.get('numeroDeVacunados1') || '0');
      this.formVariables.fecha2Vacunacion = this.formData.get('fecha2Vacunacion') || '';
      this.formVariables.numeroDeVacunados2 = cleanNumericValue(this.formData.get('numeroDeVacunados2') || '0');

      // Extraer valores financieros
      this.formVariables.calculoProductividad = this.formData.get('calculoProductividad') || '';
      this.formVariables.ventaNeta = cleanNumericValue(this.formData.get('ventaNeta') || '0');
      this.formVariables.salarioPromedio = cleanNumericValue(this.formData.get('salarioPromedio') || '0');
      this.formVariables.precioVacunacion = cleanNumericValue(this.formData.get('precioVacunacion') || '0');

      // Calcular indicador de productividad
      this.formVariables.indicadorProductividad = this.formVariables.numEmpleados > 0 
        ? this.formVariables.ventaNeta / this.formVariables.numEmpleados 
        : 0;

      // Extraer valores operacionales
      this.formVariables.nivelExposicion = parseInt(this.formData.get('nivelExposicion') || '1');
      this.formVariables.diasIncapacidad = parseInt(this.formData.get('diasIncapacidad') || '0');
    }

    private logFormValues(): void {
      console.log('=== VALORES DEL FORMULARIO ===');
      console.log('üìä Par√°metros B√°sicos:');
      console.log(`  ‚Ä¢ N√∫mero de Empleados: ${this.formVariables.numEmpleados.toLocaleString('es-CO')}`);
      console.log(`  ‚Ä¢ Fecha 1 de Vacunaci√≥n: ${this.formVariables.fecha1Vacunacion}`);
      console.log(`  ‚Ä¢ N√∫mero de Vacunados 1: ${this.formVariables.numeroDeVacunados1.toLocaleString('es-CO')}`);
      console.log(`  ‚Ä¢ Fecha 2 de Vacunaci√≥n: ${this.formVariables.fecha2Vacunacion || 'No especificada'}`);
      console.log(`  ‚Ä¢ N√∫mero de Vacunados 2: ${this.formVariables.numeroDeVacunados2.toLocaleString('es-CO')}`);
      
      console.log('üí∞ Par√°metros Financieros:');
      console.log(`  ‚Ä¢ C√°lculo de Productividad: ${this.formVariables.calculoProductividad}`);
      console.log(`  ‚Ä¢ Venta Neta: $${this.formVariables.ventaNeta.toLocaleString('es-CO')}`);
      console.log(`  ‚Ä¢ Indicador de Productividad: $${this.formVariables.indicadorProductividad.toLocaleString('es-CO', { maximumFractionDigits: 2 })}`);
      console.log(`  ‚Ä¢ Salario Promedio: $${this.formVariables.salarioPromedio.toLocaleString('es-CO')}`);
      console.log(`  ‚Ä¢ Precio Vacunaci√≥n: $${this.formVariables.precioVacunacion.toLocaleString('es-CO')}`);
      
      console.log('‚öôÔ∏è Par√°metros Operacionales:');
      const nivelExposicionTexto = this.formVariables.nivelExposicion === 1 ? 'Bajo' : 
                                   this.formVariables.nivelExposicion === 2 ? 'Medio' : 'Alto';
      console.log(`  ‚Ä¢ Nivel de Exposici√≥n: ${nivelExposicionTexto} (${this.formVariables.nivelExposicion})`);
      console.log(`  ‚Ä¢ D√≠as de Incapacidad Promedio: ${this.formVariables.diasIncapacidad}`);
      
      console.log('=== FIN VALORES DEL FORMULARIO ===\n');
    }

    private calculateResults(): void {
      console.log('üîÑ Iniciando c√°lculos con las variables del formulario...');
      
      // Usar las variables del formulario para los c√°lculos
      const totalVacunados = this.formVariables.numeroDeVacunados1 + this.formVariables.numeroDeVacunados2;
      const porcentajeVacunacion = (totalVacunados / this.formVariables.numEmpleados) * 100;
      const costoTotalVacunacion = totalVacunados * this.formVariables.precioVacunacion;
      
